p1 = input("Введите команду: ")
if p1 == "Старт":
    p2 = input(": ")
    if p2 == "Привет":
        print("Привет я текстовый помошник 'Барсик'")
        while True:
            p3 = input(": ")
            if p3 == "Какая погода сегодня":
                print("Не могу сказать точно... но будет холодно")
            elif p3 == "Как дела":
                print("Хорошо")
            else:
                print("Нет такой команды")
